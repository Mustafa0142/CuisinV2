<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/special">

    <EditText
        android:id="@+id/recipeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:background="@android:color/transparent"
        android:ems="10"
        android:padding="7dp"
        android:hint="@string/searchbar_input"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textColorHint="@color/special_variant"
        android:textSize="18sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textViewRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="@string/top_recipes"
        android:textColor="@color/special_purple"
        android:textSize="26sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tr_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>